{% extends "base.twig" %}
{% block head %}
<style>
    .header { background-image: url({{ TimberImage(post.parent.landscape_image).src }}); }
    .title {
    	color: #fff;
    	padding-top: 1.9em;
    }
    .feature-box {
    	text-align: center;
    	margin-top: 2.5rem;
    	margin-bottom: 5rem;
    }
    .icon {
    	font-size: xx-large;
    }

    .main-raised {
    	margin-bottom: 30px;
    }

    #section-author {

    }

    #btn-signature-dishes {
    	background-color: #933fc4;
    	box-shadow: 0 2px 2px 0 rgba(156, 39, 176, 0.14), 0 3px 1px -2px rgba(156, 39, 176, 0.2), 0 1px 5px 0 rgba(156, 39, 176, 0.12);
    }

    #btn-signature-dishes:hover {
    	box-shadow: 0 14px 26px -12px rgba(156, 39, 176, 0.42), 0 4px 23px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(156, 39, 176, 0.2);
    }

    #btn-location {
    	background-color: #ffcd02;
    	box-shadow: 0 2px 2px 0 rgba(255, 218, 68, 0.14), 0 3px 1px -2px rgba(255, 218, 68, 0.2), 0 1px 5px 0 rgba(255, 218, 68, 0.12);
    }

    #btn-location:hover {
    	box-shadow: 0 14px 26px -12px rgba(255, 218, 68, 0.42), 0 4px 23px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(255, 218, 68, 0.2);
    }

    #btn-ingredients {
    	background-color: #08c854;
    	box-shadow: 0 2px 2px 0 rgba(7, 200, 85, 0.14), 0 3px 1px -2px rgba(7, 200, 85, 0.2), 0 1px 5px 0 rgba(7, 200, 85, 0.12);
    }

    #btn-ingredients:hover {
    	box-shadow: 0 14px 26px -12px rgba(7, 200, 85, 0.42), 0 4px 23px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(7, 200, 85, 0.2);
    }

    .profile-content {
    	padding-bottom: 3rem;
    }

    .card {
    	background: rgba(158, 158, 158, 0.1);
    	margin-bottom: 10px;
    }

    .card h2 {
    	margin-top: 0px;
    }

    .no-post-image {
    	padding-left: 30px;
    }

    .post-preview {
    	font-size: 14pt;
    }

    .post-title {

    }

    .page-title {
    	margin-top: 0px;
    	margin-bottom: 20px;
    }

    .page-title svg {
        position: relative;
    	top: 15px;
    }


    .page-content {
    	margin-bottom: 30px;
    }


</style>
{% endblock %}
{% block content %}
<h2 class="text-center page-title">{{page_icon}} {{post.title}}</h2>
<div class="row page-content">
    <div class="col-sm-12">
        {{post.content}}
    </div>
</div>

{% for p in posts %}
<div class="post-container card ">
	<div class="row">

    	{% if p.thumbnail %}
    	<div class="col-sm-2">
	    	<img src="{{TimberImage(p.thumbnail).src}}" alt="Rounded Image" class="img-rounded img-responsive img-raised">
		</div>

		<div class="col-sm-10">
        	<div class="row">
        		<div class="col-sm-12">
        			<h2 class="post-title">{{p.title}}</h2>
    			</div>

    			<div class="col-sm-12">
        			<div class="post-preview">{{p.preview}}</div>
    			</div>

        	</div>
    	</div>

    	{% else %}
    	<div class="col-sm-12">
        	<div class="row">
        		<div class="col-sm-12">
        			<h2 class="post-title no-post-image">{{p.title}}</h2>
    			</div>

    			<div class="col-sm-12">
    				<div class="post-preview no-post-image">{{p.preview}}</div>
    			</div>
        	</div>
    	</div>
		{% endif %}



	</div>
</div>
{% endfor %}

{% endblock %}
